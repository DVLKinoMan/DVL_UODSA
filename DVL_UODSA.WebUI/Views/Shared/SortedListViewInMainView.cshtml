@model DVL_UODSA.WebUI.Models.SortedListViewModel

<div class="well">
    <table style="width:100%">
        <tr style="width:100%">
            <td style="width:100%">
                <div style="width:100%">
                    <div class="pull-left">
                        @Html.ActionLink(@Model.BaseList.Name, "ViewSortedList", "List", new { sortedListID = Model.ID }, new { @class = "" })
                    </div>

                    <div class="pull-right">
                        <table class="pull-right">
                            <tr>
                                @if (Model.BaseList.CanSort)
                                {
                                    <td>
                                        @Html.ActionLink("Sort This List", "SortList", "List", new { listID = Model.BaseList.ID }, new { @class = "btn btn-primary pull-right" })
                                    </td>
                                }
                                <td>
                                    @using (Html.BeginForm("DeleteSortedList", "List"))
                                    {
                                        @Html.Hidden("sortedListID", Model.ID)
                                        <input type="submit" class="btn btn-warning" value="Delete This Sorted List" />
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <span class="lead">@Model.BaseList.Description</span>
                </div>
            </td>
        </tr>
    </table>

</div>
